<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <fragment
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="209dp"
        android:id="@+id/Mapfragment" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:text="Time:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Time"
                android:paddingTop="16dp"
                android:paddingLeft="16dp" />

            <TextView
                android:text="Please confirm your trip displayed above."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question1"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:textSize="22sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ques1"
                android:paddingLeft="16dp"
                android:paddingTop="5dp">

                <RadioButton
                    android:text="Walking outdoors."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ans1_1"
                    android:layout_weight="1" />
                <RadioButton
                    android:text="Walking indoors."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ans1_2"
                    android:layout_weight="2" />

                <RadioButton
                    android:text="Riding a bicycle."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ans1_4"
                    android:layout_weight="4" />
                <RadioButton
                    android:text="Driving (I'm the driver)."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ans1_5"
                    android:layout_weight="5" />
                <RadioButton
                    android:text="Driving (I'm the passenger)."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ans1_6"
                    android:layout_weight="6" />

                <RadioButton
                    android:text="Taking a bus."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ans1_7"
                    android:layout_weight="7" />
<!--
                <RadioButton
                    android:text="Trip is part of previous trip (COMBINE)."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ans1_8"
                    android:layout_weight="8" />
-->

                <RadioButton
                    android:text="Trip is incorrect (DELETE)."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ans1_8"
                    android:layout_weight="3" />

                <RadioButton
                    android:text="Other."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ans1_9"
                    android:layout_weight="3" />
            </RadioGroup>

            <TextView
                android:text="Did you complete this trip on your own?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question2"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:textSize="22sp"
                android:layout_weight="1" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/ques2"
                android:paddingLeft="16dp"
                android:paddingTop="5dp">

                <RadioButton
                    android:text="Yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ans2_1"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="No"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ans2_2"
                    android:layout_weight="1" />

            </RadioGroup>
