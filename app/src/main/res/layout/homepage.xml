<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onlyDeviceId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bb0000"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#666666"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="DMS"
            android:textSize="24sp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="30dp"
            android:text="v22"
            android:textColor="#ffffff"
            android:textSize="24sp" />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userid"
            android:layout_width="234dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:text="Confirmation #:"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/group_num"
            android:layout_width="123dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="28dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/Annotate"
            android:layout_width="250dp"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_style"
            android:text="Trips"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="30sp" />

        <!-- <ImageView
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:id="@+id/tripstatus">

        </ImageView>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/linkList"
            android:layout_width="250dp"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_style"
            android:text="Surveys"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="30sp"
            android:visibility="visible" />

        <!--<ImageView
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:id="@+id/surveystatus">

        </ImageView>-->

    </LinearLayout>

    <TextView
        android:id="@+id/sleepingTime"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <Button
        android:id="@+id/settingSleepTime"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_style"
        android:text="Sleep time"
        android:textAlignment="center"
        android:textColor="#666666"
        android:textSize="18sp" />

    <Button
        android:id="@+id/closeService"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_style"
        android:text="closeService"
        android:textColor="#666666"
        android:textSize="18sp"
        android:visibility="gone" />

</LinearLayout>