<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="13">

    <!--<Button
        android:id="@+id/triggerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="35dp"
        android:text="trigger"
        android:textSize="16sp"
        android:visibility="gone" />-->

    <TextView
        android:id="@+id/surveyDayView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:gravity="right"
        android:text="Day "
        android:textColor="#bb0000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/survey1_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Survey 1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/survey1_button"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/accent"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/survey2_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Survey 2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/survey2_button"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/accent"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/survey3_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Survey 3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/survey3_button"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/accent"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/survey4_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Survey 4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/survey4_button"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/accent"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/survey5_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Survey 5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/survey5_button"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/accent"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/survey6_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Survey 6"
                android:textSize="20sp" />

            <Button
                android:id="@+id/survey6_button"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/accent"
                android:textSize="22sp" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>